<% layout('layouts/boilerplate') %>

<div class="col-8 offset-2 form-group my-5">
    <div class="shadow-lg">
        <div class="card-header text-center">
            Login
        </div>
        <div class="card-body">
            <form class="loginForm mb-3 needs-validation" action="/login" method="POST" novalidate>
                <div class="row">
                    <div class="col-sm-2">
                        <label class="pt-1" for="username">Username</label>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="username" id="username"
                            aria-describedby="usernamehelpblock" required>
                        <small id="usernamehelpblock" class="form-text text-muted mb-3">Username</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label class="pt-1" for="password">Password</label>
                    </div>
                    <div class="col">
                        <input type="password" class="form-control" name="password" id="password"
                            aria-describedby="passwordhelpblock" required>
                        <small id="passwordhelpblock" class="form-text text-muted mb-3">Password</small>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary btn-sm">Login</button>
            </form>
        </div>
    </div>
</div>